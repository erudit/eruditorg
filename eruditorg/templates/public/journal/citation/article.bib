{% load public_journal_tags i18n %}
@article{{ '{' }}{{ article.localidentifier }},
  title="{{ article.title|safe }}",
  author="{% for author in article.authors %}{% if not forloop.first %}{% trans ' ; ' %}{% endif %}{% if author.firstname and author.lastname %}{{ author.lastname|safe }}, {{ author.firstname|safe }}{% elif author.othername %}{{ author.othername|safe }}{% endif %}{% endfor %}",
  journal="{{ article.issue.journal_formatted_title }}",
  {% if article.issue.volume %}volume="{{ article.issue.volume }}",{% endif %}
  {% if article.issue.number %}number="{{ article.issue.number }}",{% endif %}
  {% if article.first_page and article.last_page %}pages="{{ article.first_page }}--{{ article.last_page }}",{% endif %}
  year="{{ article.issue.year }}",
  publisher="{{ article.publisher_name|safe }}",
  {% if article.url_doi %}doi="{{ article.url_doi }}"{% endif %}
}
