{% load public_journal_tags i18n %}
@article{{ '{' }}{{ article.localidentifier }},
  title="{{ article|format_article_title }}",
  author="{% for author in article.erudit_object.authors %}{% if not forloop.first %}{% trans ' ; ' %}{% endif %}{% if author.firstname and author.lastname %}{{ author.lastname }}, {{ author.firstname }}{% elif author.othername %}{{ author.othername }}{% endif %}{% endfor %}",
  journal="{{ article.issue.journal.name }}",
  {% if article.issue.volume %}volume="{{ article.issue.volume }}",{% endif %}
  {% if article.issue.number %}number="{{ article.issue.number }}",{% endif %}
  {% if article.first_page and article.last_page %}pages="{{ article.first_page }}--{{ article.last_page }}",{% endif %}
  year="{{ article.issue.year }}",
  publisher="{{ article.publisher.name }}"
}
